# =================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# =================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/controle_financeiro
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=controle_financeiro
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_SSL=false

# =================================
# CONFIGURAÇÃO DA APLICAÇÃO
# =================================
NODE_ENV=development
PORT=3000
API_PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# =================================
# CONFIGURAÇÃO DE SEGURANÇA
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key

# =================================
# CONFIGURAÇÃO DE EMAIL
# =================================
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@controlefinanceiro.com
EMAIL_FROM_NAME=Controle Financeiro

# =================================
# CONFIGURAÇÃO DE INTEGRAÇÃO BANCÁRIA
# =================================
BANK_API_URL=https://api.bank.com
BANK_API_KEY=your-bank-api-key
BANK_API_SECRET=your-bank-api-secret

# =================================
# CONFIGURAÇÃO DE NOTIFICAÇÕES
# =================================
NOTIFICATION_SERVICE=firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# =================================
# CONFIGURAÇÃO DE ARQUIVOS
# =================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# =================================
# CONFIGURAÇÃO DE LOG
# =================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# =================================
# CONFIGURAÇÃO DE CACHE
# =================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL=3600

# =================================
# CONFIGURAÇÃO DE MONITORAMENTO
# =================================
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# =================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# =================================
DEBUG=true
HOT_RELOAD=true
CORS_ORIGIN=http://localhost:3000

# =================================
# CONFIGURAÇÃO DE PRODUÇÃO
# =================================
